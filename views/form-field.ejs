<div class="form-group mb-3">
    <label for="title" class="form-label">Title</label>
    <input required value="<%- product.title  %> " type="text" name="title" id="title" class="form-control" />  
 </div>
 <div class="form-group mb-3">
    <label for="price" class="form-label">Giá sản phẩm</label>
    <input required value="<%- product.price  %> "type="text" name="price" id="price" class="form-control" />
 </div>
 <div class="form-group mb-3">
    <label for="description" class="form-label">Miêu tả</label>
    <textarea required  id="description" name="description" class="form-control" ><%- product.description %></textarea>
 </div>
 <div class="form-group mb-3">
    <label for="category" class="form-label">Phân loại</label>
    <input required value="<%- product.category  %>" type="text" name="category"  id="category" class="form-control" />
 </div>
 <div class="form-group mb-3">
   <label for="type" class="form-label">Kiểu sản phẩm</label>
   <input required value="<%- product.type  %>" type="text" name="type"  id="type" class="form-control" />
</div>
<div class="form-group mb-3">
   <label for="sale" class="form-label">Giảm giá</label>
   <input required value="<%- product.sale  %>"  type="text" name="sale" id="sale" class="form-control" />
</div>
 <div class="form-group mb-3">
    <label for="link" class="form-label">Link ảnh</label>
    <input required value="<%- product.image  %> " type="text" name="image"  id="image" class="form-control" />
 </div>
 <div class="form-group mb-3">
   <label for="sub_image" class="form-label">Ảnh con</label>
   <input required value="<%- product.sub_image  %> " type="text" name="sub_image"  id="sub_image" class="form-control" />
</div>
 <div class="form-group mb-3">
    <label for="sold" class="form-label">Đã bán</label>
    <input required value=" <%- product.sold  %>" type="text" name="sold" id="sold" class="form-control" />
 </div>
 <div class="form-group mb-3">
   <label for="origin" class="form-label">Nguồn gốc</label>
   <input required value="<%- product.origin %>" type="text" name="origin" id="origin" class="form-control" />
</div>
<div class="form-group mb-3">
   <label for="brand" class="form-label">Thương hiệu</label>
   <input required value="<%- product.brand  %>"  type="text" name="brand" id="brand" class="form-control" />
</div>
<div class="form-group mb-3">
   <label for="collection" class="form-label">Bộ sưu tập</label>
   <input required value="<%- product.brand  %>"  type="text" name="collection" id="collection" class="form-control" />
</div>
<div class="form-group mb-3">
   <label for="status" class="form-label">Trạng thái</label>
   <input required value="<%- product.status  %>"  type="text" name="status" id="status" class="form-control" />
</div>
<div class="form-group mb-3">
   <label for="color" class="form-label">Màu sắc</label>
   <input required value="<%- product.color  %>"  type="text" name="color" id="color" class="form-control" />
</div>
<div class="form-group mb-3">
   <label for="size" class="form-label">Kích thước</label>
   <input required value="<%- product.size  %>"  type="text" name="size" id="size" class="form-control" />
</div>
<div>
   <label for="gender">Sản phẩm dành cho</label>
   <select name="gender" id="gender">
      <option  value="Nam">Nam</option>
      <option value="Nữ">Nữ</option>
      <option value="Cả hai">Cả hai</option>
   </select>
</div>